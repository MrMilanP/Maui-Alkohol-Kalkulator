<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui_Alkohol_Kalkulator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui_Alkohol_Kalkulator.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Alkohol Kalkulator">


    <FlyoutItem Title="Početna" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate local:StartPage}" Route="StartPage"/>
    </FlyoutItem>
    <FlyoutItem Title="Kalkulator Alkohola" Icon="second.png">
        <ShellContent ContentTemplate="{DataTemplate local:KalkulatorPage}" Route="KalkulatorPage"/>
    </FlyoutItem>
    <FlyoutItem Title="Razblaživanje Alkohola" Icon="second.png">
        <ShellContent ContentTemplate="{DataTemplate local:RazblazivanjePage}" Route="RazblazivanjePage"/>
    </FlyoutItem>
</Shell>
